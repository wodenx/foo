{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "baseUrl": ".",
    "moduleResolution": "node",
    "target": "es5",
    "module": "commonjs",
    "skipDefaultLibCheck": true,
    "noUnusedLocals": true,
    "lib": ["es7", "dom"],
    "types": ["node", "jest"],
    "checkJs": false,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "allowJs": true,
    "strictNullChecks": true,
    "noEmit": true
  },
  "include": [
    "./src/**/*",
  ]
}
